		"svelte": "^5.17.0",
		"svelte-check": "^4.0.0",
		"typescript": "^5.0.0",
		"vite": "^6.0.7",
		"vitest": "^2.0.4"
	},
	"dependencies": {
		"@stripe/stripe-js": "^5.5.0",
